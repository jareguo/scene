{
  "name": "scene",
  "version": "0.1.0",
  "description": "A scene editor",
  "author": "Firebox Technology",
  "hosts": {
    "editor-framework": "^0.3.14",
    "engine-framework": "^0.1.1"
  },
  "main": "main.js",
  "menus": {
    "Panel/Scene": {
      "icon": "panel/icon.png",
      "accelerator": "CmdOrCtrl+1",
      "message": "scene:open"
    }
  },
  "panels": {
    "panel": {
      "frame": "panel/scene.html",
      "type": "dockable",
      "title": "Scene",
      "icon": "panel/icon.png",
      "width": "auto",
      "height": "auto",
      "shortcuts": {
        "w": "selectMove",
        "e": "selectRotate",
        "r": "selectScale",
        "command+backspace": "deleteCurrentSelected",
        "del": "deleteCurrentSelected"
      },
      "messages": [
        "editor:dragstart",
        "editor:dragend",
        "editor:state-changed",
        "scene:is-ready",
        "scene:new-scene",
        "scene:save-scene-from-page",
        "scene:play",
        "scene:stop",
        "scene:query-hierarchy",
        "scene:query-node",
        "scene:node-set-property",
        "scene:node-mixin",
        "scene:node-unmixin",
        "scene:create-node-by-classid",
        "scene:create-nodes-by-uuids",
        "scene:move-nodes",
        "scene:delete-nodes",
        "scene:stash-and-reload",
        "selection:selected",
        "selection:unselected",
        "selection:activated",
        "selection:deactivated",
        "selection:hoverin",
        "selection:hoverout",
        "selection:changed",
        "selection:context"
      ],
      "profiles": {
        "local": {
          "designWidth": 640,
          "designHeight": 480
        }
      }
    }
  },
  "tests": [
    "test/basic.html"
  ]
}