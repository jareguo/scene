{
  "name": "scene",
  "version": "0.1.4",
  "description": "A scene editor",
  "author": "Firebox Technology",
  "hosts": {
    "editor-framework": "^0.3.15"
  },
  "main": "main.js",
  "menus": {
    "Panel/Scene": {
      "icon": "panel/icon.png",
      "accelerator": "CmdOrCtrl+1",
      "message": "scene:open"
    }
  },
  "panels": {
    "panel": {
      "frame": "panel/scene.html",
      "type": "dockable",
      "title": "Scene",
      "icon": "panel/icon.png",
      "width": "auto",
      "height": "auto",
      "shortcuts": {
        "w": "selectMove",
        "e": "selectRotate",
        "r": "selectScale",
        "t": "selectRect",
        "command+backspace": "deleteCurrentSelected",
        "del": "deleteCurrentSelected",
        "command+d": "duplicateCurrentSelected",
        "ctrl+d": "duplicateCurrentSelected"
      },
      "messages": [
        "editor:dragstart",
        "editor:dragend",
        "scene:is-ready",
        "scene:new-scene",
        "scene:save-scene-from-page",
        "scene:play-on-device",
        "scene:reload-on-device",
        "scene:query-hierarchy",
        "scene:query-node",
        "scene:query-node-info",
        "scene:new-property",
        "scene:set-property",
        "scene:component-add",
        "scene:component-remove",
        "scene:create-node-by-classid",
        "scene:create-nodes-by-uuids",
        "scene:move-nodes",
        "scene:delete-nodes",
        "scene:duplicate-nodes",
        "scene:stash-and-reload",
        "scene:soft-reload",
        "scene:create-prefab",
        "scene:apply-prefab",
        "scene:revert-prefab",

        "selection:selected",
        "selection:unselected",
        "selection:activated",
        "selection:deactivated",
        "selection:hoverin",
        "selection:hoverout",
        "selection:changed",
        "selection:context"
      ],
      "profiles": {
        "local": {
          "designWidth": 640,
          "designHeight": 480
        }
      }
    }
  },
  "tests": [
    "test/basic.html"
  ]
}
