{
  "name": "scene",
  "version": "0.0.1",
  "description": "A scene editor",
  "author": "Firebox Technology",
  "hosts": {
    "editor-framework": "^0.3.5"
  },
  "main": "main.js",
  "menus": {
    "Panel/Scene": {
      "icon": "panel/icon.png",
      "accelerator": "CmdOrCtrl+1",
      "message": "scene:open"
    }
  },
  "panels": {
    "panel": {
      "frame": "panel/scene.html",
      "type": "dockable",
      "title": "Scene",
      "icon": "panel/icon.png",
      "width": "auto",
      "height": "auto",
      "shortcuts": {
          "w": "selectMove",
          "e": "selectRotate",
          "r": "selectScale",
          "command+backspace": "deleteCurrentSelected",
          "ctrl+backspace": "deleteCurrentSelected"
      },
      "messages": [
        "editor:dragstart",
        "editor:dragend",
        "editor:state-changed",
        "scene:play",
        "scene:stop",
        "scene:query-hierarchy",
        "scene:query-node",
        "scene:node-set-property",
        "scene:node-mixin",
        "scene:create-assets",
        "scene:move-nodes",
        "scene:delete-nodes",
        "selection:selected",
        "selection:unselected",
        "selection:activated",
        "selection:deactivated",
        "selection:hoverin",
        "selection:hoverout",
        "selection:changed"
      ],
      "profiles": {
        "local": {
          "collapses-status": []
        }
      }
    }
  },
  "tests": [
    "test/basic.html"
  ]
}
